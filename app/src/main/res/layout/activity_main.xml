<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/custom_design"
    tools:context=".MainActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The 7 Indian Heritages"
        android:textSize="35dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#292626"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cv2"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        >

        <ImageView
            android:id="@+id/lotusT"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleY="1.3"
            android:scaleX="1.1"
            android:src="@drawable/lotustemple"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/cv1"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:cardCornerRadius="40dp"
        >
    <ImageView
        android:id="@+id/redF"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:scaleY="2.64"
        android:scaleX="1.5"
        android:src="@drawable/redfort"
        />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ltbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Lotus Temple"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="14dp"
        android:textColor="#3249BD"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toBottomOf="@id/cv1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rfbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="  Red Fort  "
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:padding="14dp"
        android:textColor="#CC1D1D"
        app:layout_constraintTop_toBottomOf="@id/cv2"
        app:layout_constraintLeft_toRightOf="@id/ltbtn"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toLeftOf="@id/cv4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ltbtn"
        app:cardCornerRadius="40dp"
        >
        <ImageView
            android:id="@+id/ct"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleY="3.3"
            android:scaleX="1.8"
            android:src="@drawable/cholatemple1"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cv4"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rfbtn"
        app:cardCornerRadius="40dp"
        >

        <ImageView
            android:id="@+id/jm"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleY="2.3"
            android:scaleX="1.19"
            android:src="@drawable/jantarmantar"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ctbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Chola Temple"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="14dp"
        android:layout_marginTop="2dp"
        android:textColor="#D5BA11"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toBottomOf="@id/cv3"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/jmbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Jantar Mantar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:padding="14dp"
        android:textColor="#E86363"
        app:layout_constraintTop_toBottomOf="@id/cv4"
        app:layout_constraintLeft_toRightOf="@id/ctbtn"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toLeftOf="@id/cv6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctbtn"
        app:cardCornerRadius="40dp"
        >
        <ImageView
            android:id="@+id/mt"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleY="2.4"
            android:scaleX="1.6"
            android:src="@drawable/mahabodhitemple"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jmbtn"
        app:cardCornerRadius="40dp"
        >

        <ImageView
            android:id="@+id/qm"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleY="2.3"
            android:scaleX="1.5"
            android:src="@drawable/qutubminar"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Bodh Gaya"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="14dp"
        android:layout_marginTop="2dp"
        android:textColor="#E3D19F"
        android:layout_marginLeft="44dp"
        app:layout_constraintTop_toBottomOf="@id/cv5"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/qmbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Qutub Minar"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:padding="14dp"
        android:textColor="#880B0B"
        app:layout_constraintTop_toBottomOf="@id/cv6"
        app:layout_constraintLeft_toRightOf="@id/bgbtn"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qmbtn"
        >

        <ImageView
            android:id="@+id/tm"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleX="1.16"
            android:scaleY="2.4"
            android:src="@drawable/tajmahal1" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tmbtn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="14dp"
        android:text="Taj Mahal"
        android:textColor="#DACECE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv7"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>